{
    "extends": "solhint:recommended",
    "plugins": [],
    "rules": {
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "func-visibility": ["off", { "ignoreConstructors": true }],
        "compiler-version": ["off", "^0.5.8"],
        "mark-callable-contracts": "off",
        "not-rely-on-time": "off",
        "indent": "off",
        "no-empty-blocks": "off"
    }
}
